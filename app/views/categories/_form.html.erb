      <%= render "shared/errors", obj: @category %>
      <%# Form should be pre-filled %>
      <%= form_with(model: @category, local: true, data: {turbo: false}, class:"shadow p-3 mb-2 bg-info bg-opacity-50 rounded") do |f| %>

        <div class="form-group row pt-4">
          <%= f.label :name, "Category name", class:"col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class:"form-control shadow rounded", placeholder: "Enter a category" %>
          </div>
          
        </div>

        <div class="form-group row pt-4 justify-content-center">
          <%= f.submit class:"btn btn-outline-light btn-lg w-25" %>
        </div>

      <% end %>
