<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%# Form should be pre-filled %>
      <%= form_with(model: @article, local: true, data: {turbo: false}, class:"shadow p-3 mb-2 bg-info bg-opacity-50 rounded") do |f| %>

        <div class="form-group row pt-4">
          <%= f.label :title, class:"col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class:"form-control shadow rounded", placeholder: "Title of article" %>
          </div>
          
        </div>

        <div class="form-group row pt-4">
          <%= f.label :description, class:"col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class:"form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="form-group row pt-4 justify-content-center">
          <%= f.submit class:"btn btn-outline-light btn-lg w-25" %>
        </div>

      <% end %>

    </div>

    <%= link_to "[ Cancel and return to articles listing ]", articles_path, class: "text-info text-center p-3 fw-semibold underlined-link" %>

  </div>    
</div>
