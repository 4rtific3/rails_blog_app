<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @user %>
      <%# Form should be pre-filled %>
      <%= form_with(model: @user, local: true, data: {turbo: false}, class:"shadow p-3 mb-2 bg-info bg-opacity-50 rounded") do |f| %>

        <div class="form-group row pt-4">
          <%= f.label :username, class:"col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :username, class:"form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
          
        </div>

        <div class="form-group row pt-4">
          <%= f.label :email, class:"col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, rows: 10, class:"form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row pt-4">
          <%= f.label :password, class:"col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, rows: 10, class:"form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>

        <div class="form-group row pt-4 justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class:"btn btn-outline-light btn-lg w-25") %>
        </div>

      <% end %>

    </div>

    <%= link_to "[ Cancel and return to articles listing ]", articles_path, class: "text-info text-center p-3 fw-semibold underlined-link" %>

  </div>    
</div>
